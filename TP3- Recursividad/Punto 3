//3. Recorrer un arreglo y mostrar sus elementos en forma recursiva.
int main()
{

    int arreglo[5] = {1,2,3,4,5};

    mostrarArreglo(arreglo, 5, 0);

    return 0;
}


void mostrarArreglo(int arreglo[], int validos, int vuelta){

int rta;

if (validos == vuelta){ // condicion de corte
        
        //Una vez que se entra en la condicion de corte, 
        // se caen todas las funcionces, por eso el if
        //sirve como barrera.
        // osea que con un if cortamos las funciones porque no se ejecuta
        // el else que ahce que sisfa la recursividad

}
else {

    printf("\n%i", arreglo[vuelta]); // print resultados
    mostrarArreglo(arreglo, validos, vuelta + 1); // llamada recursvia

}



}
